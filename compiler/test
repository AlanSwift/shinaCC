
void mergeSort(int *a, int *b, int left, int right)
{
	int aptr, bptr, ptr, i;
	int center;
	if(left < right){
		center = (left + right) / 2;
		mergeSort(a, b, left, center);
		mergeSort(a, b, center + 1, right);
		aptr = left; bptr = center + 1;
		ptr = left;
		while(aptr <= center && bptr <= right){
			if(a[aptr] < a[bptr]){
				b[ptr] = a[aptr];
				aptr += 1;
			}
			else{
				b[ptr] = a[bptr];
				bptr += 1;
			}
			ptr += 1;
		}

		while(aptr <= center){
			b[ptr] = a[aptr];
			aptr += 1;
			ptr += 1;
		}

		while(aptr <= center && bptr <= right){
			b[ptr] = a[bptr];
			bptr += 1;
			ptr += 1;
		}

		for(i = left; i <= right; i += 1)
			a[i] = b[i];
	}
}

int main()
{
	int a;
	a = ~a;
	return 0;
}